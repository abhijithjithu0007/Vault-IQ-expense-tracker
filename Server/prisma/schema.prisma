datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int        @id @default(autoincrement())
  name           String
  email          String     @unique
  password       String
  totalAmount    Int        @default(0)
  currentExpense Float      @default(0)
  currency       String     @default("â‚¹")
  expenses       Expense[]
  Category       Category[]
  Budget         Budget[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  userId      Int
  category    String
  bill        String?
  amount      Float
  description String?
  date        DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model Budget {
  id       Int    @id @default(autoincrement())
  userId   Int
  category String
  amount   Int

  user User @relation(fields: [userId], references: [id])
}
