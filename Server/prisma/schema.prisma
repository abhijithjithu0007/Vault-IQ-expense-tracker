datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  totalAmount Int @default(0)
  currentExpense  Int @default(0)
  currency  String @default("IND") 
  expenses  Expense[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  userId      Int
  category    String
  bill        String?
  amount      Float 
  description String?
  date        DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id])
}
